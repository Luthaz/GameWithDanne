<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import java.net.URL?>
<BorderPane fx:controller="Controller"
            xmlns:fx="http://javafx.com/fxml">
 
    <stylesheets>
        <URL value="@css.css"/>
    </stylesheets>
 
    <center>
    	<VBox>
	   	 	<Button text="Start" onAction="#handleOnStart" fx:id="startButton"/>
	        <Button text="Options" onAction="#handleOnOptions" fx:id="optionsButton"/>
	        <Button text="Exit" onAction="#handleOnExit" fx:id="exitButton"/>
        </VBox>
    </center>

</BorderPane>